{
	"extends": "airbnb-base",
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"rules": {
		"arrow-parens": [2, "always"],
		"brace-style": [2, "stroustrup", { "allowSingleLine": true }],
		"comma-dangle": [2, "always-multiline"],
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"keyword-spacing": [2, { "after": false, "overrides": {
			"from": { "after": true },
			"else": { "after": true },
			"import": { "after": true },
			"return": { "after": true }
		} }],
		"max-len": [2, 120],
		"no-confusing-arrow": 0,
		"no-param-reassign": [2, { "props": false }],
		"no-mixed-operators": [2, {
			"groups": [
				["&", "|", "^", "~", "<<", ">>", ">>>"],
				["&&", "||"]
			]
		}],
		"no-tabs": [0],
		"padded-blocks": [2, { "blocks": "always", "switches": "never" }],
		"space-in-parens": [0, "never"]
	}
}
